{
  "name": "solarforce-website",
  "version": "1.0.0",
  "description": "SolarForce - Premium Solar Solutions Website",
  "type": "module",
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun --watch run src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "build:node": "bun build src/index.node.ts --outdir ./dist --target node",
    "start:node": "node dist/index.node.js",
    "build:static": "bun run scripts/build-static.ts",
    "generate-sitemap": "bun run scripts/generate-sitemap.ts"
  },
  "keywords": [
    "solar",
    "renewable-energy",
    "solar-panels",
    "rooftop-solar"
  ],
  "author": "SolarForce",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@n8n/chat": "^1.3.0",
    "framer-motion": "^12.26.2",
    "hono": "^4.0.0",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/nodemailer": "^7.0.5",
    "typescript": "^5.3.0"
  }
}