{
    "version": 2,
    "buildCommand": "",
    "installCommand": "npm install",
    "framework": null,
    "outputDirectory": "",
    "functions": {
        "api/index.ts": {
            "includeFiles": "src/**/*.{html,xml}"
        }
    },
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "/assets/$1"
        },
        {
            "source": "/img/(.*)",
            "destination": "/img/$1"
        },
        {
            "source": "/css/(.*)",
            "destination": "/css/$1"
        },
        {
            "source": "/js/(.*)",
            "destination": "/js/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index"
        }
    ]
}